{
  "name": "react-nano-timepicker",
  "version": "1.0.0",
  "description": "A lightweight, accessible timepicker component for React with full keyboard navigation and CSS customization",
  "author": "nosisky",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nosisky/react-nano-timepicker.git"
  },
  "homepage": "https://github.com/nosisky/react-nano-timepicker#readme",
  "bugs": {
    "url": "https://github.com/nosisky/react-nano-timepicker/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:demo": "vite build -c vite.demo.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "react",
    "timepicker",
    "time-picker",
    "time-input",
    "time-select",
    "accessible",
    "a11y",
    "keyboard-navigation",
    "customizable"
  ]
}